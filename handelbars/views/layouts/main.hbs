<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{title}}</title>
   <script type="application/javascript" src="juqery-2.14.min.js"></script>
    <script type="text/javascript" src="js/handlebars-1.0.0.beta.6.js"></script>
</head>
<body>

{{{body}}}
<p id="ph"></p>
<script id="pHelper" type="text/x-handlebars-template">
{{#compare age 20}}
    <p>{{age}}</p>
    {{/compare}}
</script>
<script>
 $(document).ready(function() {
alert(1);
    var data = {age: 30};
    var myTemplate = Handlebars.compile($("#pHelper").html());

    //注册一个比较大小的Helper,判断v1是否大于v2
        Handlebars.registerHelper("compare",function(v1, v2, options){
            if(v1 > v2){
                //满足添加继续执行
                return options.fn(this);
            }else{
    //不满足条件执行{{else}}部分
            return options.inverse(this);
            }
});
    $('#ph').html(myTemplate(data));
})
</script>
</body>
</html>